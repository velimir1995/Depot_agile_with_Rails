<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>
<h1>Your Pragmatic Catalog</h1>
<% if session[:counter] > 5 %>
  <%= "visited without adding to cart: " + pluralize(session[:counter], "time") %>
<% end %>
<ul class="catalog"> 
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
        <li>
          <h2><%= product.title %></h2>
          <p>
            <%= sanitize(product.description) %>
          </p>
          <div class="price">
            <%= number_to_currency(product.price, unit: "EUR", separator: ".", delimiter: ",", format: "%n %u") %>
            <%= button_to 'Add to Cart', line_items_path(product_id: product),
                          remote: true %>
          </div>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>